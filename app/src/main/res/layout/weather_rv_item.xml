<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardCornerRadius="20dp"
    android:background="@android:color/transparent"
    app:cardElevation="10dp"
    android:layout_margin="10dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cardview_shape"
        >

        <TextView
            android:id="@+id/idTVtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="text"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/idCVTemprature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idTVtime"
            android:layout_marginStart="5dp"

            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:padding="4dp"
            android:text="text"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/idCVcondition"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/idCVTemprature"
            android:layout_centerInParent="true"
            android:padding="5dp" />

        <TextView
            android:id="@+id/idWinSpeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idCVcondition"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:padding="4dp"
            android:text="text"
            android:textAlignment="center"
            android:textColor="@color/white" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>